{
  "family": "polybot-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::250935838858:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::250935838858:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "polybot",
      "image": "250935838858.dkr.ecr.us-east-1.amazonaws.com/polybot:latest",
      "essential": true,
      "environment": [
        { "name": "DRY_RUN", "value": "true" },
        { "name": "MIN_PROFIT_PERCENT", "value": "1.0" },
        { "name": "MAX_TRADE_SIZE", "value": "100.0" },
        { "name": "MAX_DAILY_LOSS", "value": "50.0" },
        { "name": "SCAN_INTERVAL", "value": "2.0" }
      ],
      "secrets": [
        {
          "name": "POLYMARKET_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/polymarket-api-key-zrdOhf"
        },
        {
          "name": "POLYMARKET_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/polymarket-secret-PId1jD"
        },
        {
          "name": "KALSHI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/kalshi-api-key-3eDaUX"
        },
        {
          "name": "KALSHI_PRIVATE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/kalshi-private-key-U5bjhk"
        },
        {
          "name": "SUPABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/supabase-url-wc3t4e"
        },
        {
          "name": "SUPABASE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:250935838858:secret:polybot/supabase-key-WmEL8Z"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/polybot",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
