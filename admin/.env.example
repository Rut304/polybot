# PolyParlay Admin Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# AWS Credentials (for Secrets Manager and Lightsail)
# NOTE: The code expects AMAZON_* prefix (not AWS_*)
AMAZON_ACCESS_KEY_ID=AKIA...
AMAZON_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_LIGHTSAIL_SERVICE_NAME=polybot

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# UptimeRobot Monitoring (optional)
UPTIMEROBOT_STATUS_PAGE=https://stats.uptimerobot.com/your_page_id
UPTIMEROBOT_API_KEY_DASHBOARD=m8xxxxx-xxxxx
UPTIMEROBOT_API_KEY_BOT_HEALTH=m8xxxxx-xxxxx
UPTIMEROBOT_API_KEY_BOT_STATUS=m8xxxxx-xxxxx

# OpenAI (for AI features)
OPENAI_API_KEY=sk-xxx

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXX
