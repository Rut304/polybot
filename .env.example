# Environment variables for PolyBot
# Copy this file to .env and fill in your values

# ===================
# Mode Configuration
# ===================

# Set to false for live trading (START WITH TRUE!)
DRY_RUN=true

# Minimum profit percentage to execute trade
MIN_PROFIT_PERCENT=1.0

# Maximum trade size in USD
MAX_TRADE_SIZE=100.0

# Maximum daily loss before circuit breaker (USD)
MAX_DAILY_LOSS=50.0

# Max consecutive failed trades before pause
MAX_CONSECUTIVE_FAILURES=3

# Reject trades if price moved more than this %
SLIPPAGE_TOLERANCE=0.5

# Time between opportunity scans (seconds)
SCAN_INTERVAL=2.0

# Require manual approval for first N trades
MANUAL_APPROVAL_TRADES=10

# ===================
# Polymarket Config
# ===================

# Your Polymarket CLOB API credentials
# Get these from: https://polymarket.com (API section in settings)
POLYMARKET_API_KEY=
POLYMARKET_SECRET=

# Optional: Wallet private key for on-chain signing (0x...)
POLYMARKET_PRIVATE_KEY=

# ===================
# Kalshi Config  
# ===================

# Your Kalshi API Key ID
KALSHI_API_KEY=

# Your Kalshi private key (paste contents or path to .pem file)
KALSHI_PRIVATE_KEY=

# ===================
# Database Config
# ===================

# Supabase URL (from project settings)
SUPABASE_URL=

# Supabase Service Role Key (from project settings > API > service_role key)
# NOTE: This is the service role key, NOT the anon key. Required for RLS bypass.
SUPABASE_SERVICE_ROLE_KEY=

# ===================
# Notifications
# ===================

# Discord webhook URL for alerts
DISCORD_WEBHOOK=

# Telegram bot token and chat ID (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
